<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blackback"
    tools:context=".MainActivity" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="124dp" >
    </GridLayout>

    <ImageButton
        android:id="@+id/student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gridLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/custom_back"
        android:onClick="MyClick"
        android:scaleType="fitEnd"
        android:paddingRight="80dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_margin="1dp"
        android:src="@drawable/student1"
        android:layout_alignParentEnd="false"/>

    <ImageButton
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/student"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/student"
        android:layout_alignTop="@+id/gridLayout1"
        android:background="@drawable/custom_back"
        android:onClick="MyClick"
        android:scaleType="fitEnd"
        android:paddingRight="80dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/teacher1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1"
        android:paddingLeft="20dp"
        android:paddingTop="80dp"
        android:text="Teacher"
        android:textColor="#FFF"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/student"
        android:paddingLeft="20dp"
        android:paddingTop="80dp"
        android:layout_alignLeft="@+id/student"
        android:text="Student"
        android:textSize="36dp"
        android:textColor="#FFF" />

</RelativeLayout>